rules_version = '2';

service firebase.storage {
  match /b/{bucket}/o {

    // Default deny all reads and writes
    match /{allPaths=**} {
      allow read, write: if false;
    }

    // Allow public read access to all files under the /public directory
    match /public/{allPaths=**} {
      allow read;
    }

    // Allow authenticated users to write to the organizers folder.
    // A more secure rule would be to check if the userId matches the path,
    // but this requires the organizer ID to be the same as the user UID.
    // e.g. match /public/organizers/{userId}/{allPaths=**}
    match /public/organizers/{organizerId}/{allPaths=**} {
      allow write: if request.auth != null;
    }
    
    // Allow authenticated users to write to event folders.
    // This rule allows any authenticated user to upload event assets.
    // For higher security, you could add a check to verify event ownership
    // via a Firestore read from within the rule.
    match /public/events/{eventId}/{allPaths=**} {
        allow write: if request.auth != null;
    }
  }
}
