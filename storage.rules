rules_version = '2';

service firebase.storage {
  match /b/{bucket}/o {
    // By default, deny all reads and writes
    // This ensures that only the paths explicitly defined below are accessible.
    
    // Match any file within the 'public' directory
    match /public/{allPaths=**} {
      // Allow anyone to read files from the public folder.
      // This is necessary for the app to display event images, logos,
      // and documents to all users, including those not logged in.
      allow read;

      // Allow write operations (create, update, delete) only if the user
      // is authenticated. This prevents anonymous users from uploading files.
      allow write: if request.auth != null;
    }
  }
}
