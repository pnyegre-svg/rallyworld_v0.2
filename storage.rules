rules_version = '2';

service firebase.storage {
  match /b/{bucket}/o {
    match /{allPaths=**} {
      // Allow public read access to all files.
      // This is useful for public assets like event images and documents.
      allow read;

      // Allow write access (upload, update, delete) only to authenticated users.
      // This is the core of the fix for the 'storage/unauthenticated' error.
      allow write: if request.auth != null;
    }
  }
}
