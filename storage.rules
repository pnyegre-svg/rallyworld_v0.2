rules_version = '2';

// 1. Grant access to the service account for the Resize Images extension.
// 2. Grant read access to all users.
// 3. Grant write access to authenticated users on file uploads.
// 4. Grant delete access to authenticated users.
service firebase.storage {
  match /b/{bucket}/o {
    // Allow public read access to all files
    match /{allPaths=**} {
      allow read;
    }

    // Allow authenticated users to write to the /events folder
    match /events/{allPaths=**} {
        allow write: if request.auth != null;
    }

    // Allow authenticated users to write to the /organizers folder
    match /organizers/{allPaths=**} {
        allow write: if request.auth != null;
    }
    
    // Allow authenticated users to delete their own files
    // (This is a good rule to have for the future)
     match /{userId}/{allPaths=**} {
      allow delete: if request.auth != null && request.auth.uid == userId;
    }
  }
}
