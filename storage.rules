
rules_version = '2';

// See https://firebase.google.com/docs/storage/security
service firebase.storage {
  match /b/{bucket}/o {
    // This rule allows anyone to read files from your storage bucket.
    // This is necessary so that event cover images and logos can be
    // displayed to all users of your application.
    match /{allPaths=**} {
      allow read;
    }

    // This rule only allows authenticated users to upload files.
    // This prevents anonymous users from uploading files to your bucket.
    // All of our uploads will happen under the "events/" path.
    match /events/{allPaths=**} {
      allow write: if request.auth != null;
    }
  }
}
