
rules_version = '2';
service firebase.storage {
  match /b/{bucket}/o {
    // Default rule: Deny all reads and writes
    match /{allPaths=**} {
      allow read, write: if false;
    }

    // Allow public read access to files in the 'public' folder
    match /public/{allPaths=**} {
      allow read: if true;
    }

    // Allow authenticated users to write to their own folder within 'public/users'
    match /public/users/{userId}/{allPaths=**} {
      allow write: if request.auth != null && request.auth.uid == userId;
    }
    
    // Allow authenticated organizers to write to their own folder within 'public/organizers'
    match /public/organizers/{userId}/{allPaths=**} {
      allow write: if request.auth != null && request.auth.uid == userId;
    }
  }
}
