rules_version = '2';

service firebase.storage {
  match /b/{bucket}/o {
    // Allow public read for all files, so event images can be displayed.
    match /{allPaths=**} {
      allow read;
    }

    // Only allow authenticated users to upload files into the 'events' folder.
    match /events/{allPaths=**} {
      allow write: if request.auth != null;
    }
  }
}
