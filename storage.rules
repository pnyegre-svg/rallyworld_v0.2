rules_version = '2';

service firebase.storage {
  match /b/{bucket}/o {

    // Default rule: By default, deny all reads and writes.
    // We will then open up specific paths.
    
    // Rule 1: Allow anyone to read any file.
    // This is required so the app can display event cover images, logos,
    // and organizer profile pictures to all users, including those not signed in.
    match /{allPaths=**} {
      allow read;
    }

    // Rule 2: Allow authenticated users to write to the 'events' folder.
    // This allows organizers to upload cover images, logos, and documents
    // when creating or editing an event.
    match /events/{allPaths=**} {
      allow write: if request.auth != null;
    }

    // Rule 3: Allow authenticated users to write to the 'organizers' folder.
    // This allows an organizer to upload their club's profile picture.
    match /organizers/{allPaths=**} {
      allow write: if request.auth != null;
    }
  }
}
