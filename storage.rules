rules_version = '2';
service firebase.storage {
  match /b/{bucket}/o {
    // Default: deny all read/write access.
    match /{allPaths=**} {
      allow read, write: if false;
    }

    // Allow public read access to files under the /public/ path.
    match /public/{allPaths=**} {
      allow read: if true;
    }

    // Allow authenticated users to write to their own organizer folder.
    // The {userId} wildcard must match the UID of the authenticated user.
    match /public/organizers/{userId}/{allPaths=**} {
      allow write: if request.auth != null && request.auth.uid == userId;
    }
  }
}
