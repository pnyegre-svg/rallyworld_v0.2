rules_version = '2';

service firebase.storage {
  match /b/{bucket}/o {
    
    // Deny all reads and writes by default.
    // This is a security best practice.
    match /{allPaths=**} {
      allow read, write: if false;
    }
    
    // Allow public read access to all files within the /public/ directory.
    // This is where all event images, logos, and documents will be stored.
    match /public/{allPaths=**} {
      allow read;
    }

    // Allow authenticated users to write to the organizer and event directories.
    // This ensures only logged-in organizers can upload files.
    match /public/organizers/{organizerId}/{allPaths=**} {
      allow write: if request.auth != null;
    }
    
    match /public/events/{eventId}/{allPaths=**} {
      allow write: if request.auth != null;
    }
  }
}
