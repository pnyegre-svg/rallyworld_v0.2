rules_version = '2';

service firebase.storage {
  match /b/{bucket}/o {

    function isSignedIn() {
      return request.auth != null;
    }

    function isOwner(eventId) {
      return isSignedIn() && get(/databases/$(database)/documents/events/$(eventId)).data.organizerId == request.auth.uid;
    }
    
    function isEventPublic(eventId) {
      return get(/databases/$(database)/documents/events/$(eventId)).data.public == true;
    }

    match /events/{eventId}/{allPaths=**} {
      allow read: if isEventPublic(eventId) || isOwner(eventId);
      allow write: if isOwner(eventId);
    }
  }
}